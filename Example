local wmdui

do
    local ok, result = pcall(function()
        return require("./src/Init")
    end)
    
    if ok then
        wmdui = result
    else 
        wmdui = loadstring(game:HttpGet(""))()
    end
end



function createPopup()
    return wmdui:Popup({
        Title = "Welcome to the wmdui!",
        Icon = "bird",
        Content = "Hello!",
        Buttons = {
            {
                Title = "Hahaha",
                Icon = "bird",
            },
            {
                Title = "Hahaha",
                Icon = "bird",
            },
            {
                Title = "Hahaha",
                Icon = "bird",
            }
        }
    })
end



